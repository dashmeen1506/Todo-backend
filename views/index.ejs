<body>
    <div class="container text-white p-5 rounded w-25">
        <h1 class="text-center">To Do List</h1>
        <form action="/addtask" method="POST">
            <div class="d-flex pt-5">
                <input type="text" placeholder="Add your new todo" name="newtask" class="form-control">
                <button class="btn btn-danger">Add</button>
            </div>
            <div class="pt-5">
            <% for(var i=0;i<task.length;i++){ %>
                <li class="list-group-item mb-2" style="background-color: #358597;">
                    <input type="checkbox" name="check" class="mr-3 text-md" value="<%= task[i] %>" /> <%= task[i] %> 
                <button type="submit" formaction="/removetask" class="close" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
                </li>
            <% } %>
            <!-- <button formaction="/removetask" type="submit"> Remove </button> -->        
            </div>
        </form>
    </div>

</body>
